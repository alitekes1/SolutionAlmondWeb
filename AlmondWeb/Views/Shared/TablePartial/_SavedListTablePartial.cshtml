@{
    int counter = 0;
    int currentUserID = CacheHelper.CurrentUserID();

    SharedListManager slm = new SharedListManager();
    var list = slm.RelationList(currentUserID).OrderByDescending(x => x.Id);//sadece kullanıcın paylaştığı listeleri döner

    var listCount = list.GroupBy(x => x.List.listName).ToList();
    string listType = string.Empty;
}
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<div class="col-sm-12 bloklar" id="savedListTable">
    <div class="tbl-header">
        <div class="cell-border  hover" style="text-align:center;width:100%;">
            <table style="width: 100%; text-align: center; margin-bottom: 0;" class="table table-hover table-bordered table-responsive">
                <thead class="bg-danger bg-opacity-50">
                    <tr>
                        <th class="text-center" style="width:5%">#</th>
                        <th class="text-center" style="width:20%">Liste</th>
                        <th class="text-center" style="width:40%">Açıklama</th>
                        <th class="text-center" style="width:10%">Sahibi</th>
                        <th class="text-center" style="width:15%">Top.Veri</th>
                        <th class="text-center" style="width:10%">Kaldır</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <div style="width:100%;overflow:auto;  max-height:530px;">
        <table style="width:100%;" class="text-center table table-hover table-bordered table-responsive">
            <caption>Kaydettiğim Listelerim</caption>
            @if (list.Count() == 0 || list is null)
            {
                <tr>
                    <td>
                        Hiçbir liste kaydetmediniz.
                        <a href="Liste-Kesfet" class="fst-italic text-dark">Liste Keşfet</a> butonundan liste keşfedebilirsiniz.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in list)
                {
                    counter++;
                    <tr>
                        <td class="text-center" width="5%">@counter</td>
                        <td class="text-center" width="20%">@item.List.listName</td>
                        <td class="text-center" width="40%">@item.List.listDescription</td>
                        <td class="text-center" width="10%">@item.List.Owner.Username</td>
                        <td class="text-center" width="15%">@item.List.DataTables.Count</td>
                        @* Sil Butonu *@
                        <td class="text-center" width="10%">
                            <button type="button" class="btntableDelete" onclick="transfertoListName('@item.List.listName')" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <svg viewBox="0 0 15 17.5" height="17.5" width="15" xmlns="http://www.w3.org/2000/svg" class="icon">
                                    <path transform="translate(-2.5 -1.25)" d="M15,18.75H5A1.251,1.251,0,0,1,3.75,17.5V5H2.5V3.75h15V5H16.25V17.5A1.251,1.251,0,0,1,15,18.75ZM5,5V17.5H15V5Zm7.5,10H11.25V7.5H12.5V15ZM8.75,15H7.5V7.5H8.75V15ZM12.5,2.5h-5V1.25h5V2.5Z" id="Fill"></path>
                                </svg>
                            </button>
                            <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Aşağıdaki liste kaldırılıcaktır.Emin misiniz?</h5>
                                            <button type="button" id="closebtn12" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <label class="" id="removeSavedListName"></label>
                                        </div>
                                        <div class="modal-footer">
                                            <p class="small fst-italic text-start">
                                                *İlgili listenin içindeki veriler de dahil olmak üzere bu listedeye dahil herşey geri alınamayacak şekilde kaldırılacaktır.
                                            </p>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                            <button type="button" class="btn btn-danger" onclick="RemoveSavedList('@item.Id')">Kaldır</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

<script>
    function transfertoListName(listName) {
        $("#removeSavedListName").text(listName);
    }
    function RemoveSavedList(listId) {
        $.ajax({
            method: "POST",
            url: 'Home/RemoveSavedList',
            data: { listid: listId },
            success: function (result) {
                if (result > 0) {
                    toastr.success("İşlem başarılı", "Liste kaldırıldı.", { closeButton: true, timeOut: 1500 });
                    ReLoadSavedListTable();
                }
                else {
                    toastr.warning("İşlem başarısız", "Liste Kaldırılamadı.", { closeButton: true, timeOut: 1500 })
                }
            }, complete: function () {
                $("#closebtn12").click();
            }
        });
    }
    function ReLoadSavedListTable() {
        let table = $("#savedListTable");
        $.ajax({
            method: "GET",
            url: '/Home/SavedListTablePartial',
            success: function (tableData) {
                table.empty(); // Tabloyu temizliyoruz

                table.append(tableData);
            }
        });
    }
</script>