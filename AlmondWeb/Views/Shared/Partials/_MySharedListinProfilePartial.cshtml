@{
    int currentUserID = CacheHelper.CurrentUserID();
    ListManager lm = new ListManager();
    List<ListTable> data = lm.ListwithExpression(x => x.Owner.Id == currentUserID);

}
<link href="~/Content/AlmondCss/ProfileLists.css" rel="stylesheet" />
<div class="row my-3">
    @foreach (var item in data)
    {
        <div class="col-sm-3 mb-5 d-flex justify-content-center">
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        @if (item.listName.Length > 18)
                        {

                            <p title="@item.listName" class="title text-danger text-sm-center ">@item.listName.Substring(0, 15)...</p>
                        }
                        else
                        {
                            <p class="title text-danger">@item.listName</p>
                        }
                        <p>@@@item.Owner.Username</p>

                    </div>
                    <div class="flip-card-back ">
                        <label class="backListName mx-2 fs-5 text-center">@item.listName</label><hr />
                        <label class="backside text-dark text-center mx-2 my-1">

                            @if (!item.listDescription.IsEmpty())
                            {
                                <p> @item.listDescription</p>
                            }
                            else
                            {
                                <p>@string.Empty</p>
                            }

                        </label>
                        <a href="/Liste-Yonetimi" title="Liste Yönetimi sayfasına gider" class="btn btn-dark mx-4 my-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                            <label class="small">Düzenle</label>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
