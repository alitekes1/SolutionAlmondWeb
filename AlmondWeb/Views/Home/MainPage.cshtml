            alert("kısayol tuşuna basıldı:)");
        }
        if (event.shiftKey && event.key === 'T') {
            alert("kısayol tuşuna basıldı:)");
        }
    }
    function mainpageShortcuts(event) {
        if (event.key === '1') {
            $("#puan1").click();
        }
        if (event.key === '2') {
            $("#puan2").click();
        }
        if (event.key === '3') {
            $("#puan3").click();
        }
        if (event.key === '4') {
