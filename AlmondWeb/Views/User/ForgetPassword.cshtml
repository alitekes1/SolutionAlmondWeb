@model AlmondUserTable
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/BaseLayout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-sm-4 my-3">
        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Kayıtlı Email adresinizi giriniz.">
                <button type="submit" class="btn btn-success">Gönder</button>
            </div>
        </form>
    </div>
</div>

<div class="row justify-content-center mt-5">
    <div class="col-sm-6">
        <div class="alert alert-success visually-hidden ">
            Girilen email adresine şifreni değiştirme linki gönderdik. Linke tıklayarak şifreni değiştirebilirsin.
        </div>
    </div>
</div>
