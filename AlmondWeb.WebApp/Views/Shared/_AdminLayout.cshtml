<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/AdminPanel/assets/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/AdminPanel/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/AdminPanel/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

</head>
<body>
    <nav style="margin-top: 0px; background-color: #A8A196;">
        <div class="row">
            <div class="col-sm-3">
                <a href="/">
                    <img src="~/Images/logo/almondLogo1rmvbg.png" class="mt-2" width="178px" alt="logoAlmond">
                </a>
                <label>Admin</label>
            </div>
            <div class="col-sm-5"></div>
            <div class="col-sm-3 mt-lg-3">
                <a href="../Home/Logout" class="btn btn-secondary float-end ms-2">Çıkış Yap</a>
                <a href="../Home/MainPage" class="btn btn-secondary float-end me-3">Kullanıcı bölümüne geç</a>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </nav>
    <!-- /. NAV TOP  -->
    <nav class="navbar-default navbar-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav" id="main-menu">
                <li class="w-100">
                    <a href="AllUser" class="text-decoration-none"><i class="fa fa-users fa-3x"></i> Kullanıcı İşlemleri</a>
                </li>
                <li class="w-100">
                    <a href="AllData" class="text-decoration-none"><i class="fa fa-unlock fa-3x"></i> Veri İşlemleri</a>
                </li>
                <li class="w-100">
                    <a href="AllList" class="text-decoration-none"><i class="fa fa-list fa-3x"></i> Liste İşlemleri</a>
                </li>
                <li class="w-100">
                    <a href="AllMessages" class="text-decoration-none"><i class="fa fa-envelope fa-3x"></i> Mesajlar</a>
                </li>
                <li class="w-100 ">
                    <a href="Admins" class="text-decoration-none"><i class="fa fa-user fa-3x"></i> Adminler </a>
                </li>
                <li class="w-100 ">
                    <a href="AlmondWebStatistic" class="text-decoration-none"><i class="fa fa-clipboard fa-3x"></i> İstatistikler</a>
                </li>
            </ul>

        </div>

    </nav>
    <!-- /. NAV SIDE  -->
    <div>
        @RenderBody()
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<!-- BOOTSTRAP SCRIPTS -->
<script src="~/Scripts/bootstrap.min.js"></script>
<!-- CUSTOM SCRIPTS -->
<script src="~/AdminPanel/assets/js/custom.js"></script>
