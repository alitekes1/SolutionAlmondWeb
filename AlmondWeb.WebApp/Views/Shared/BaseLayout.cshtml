@using AlmondWeb.Entities
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | AlmondWeb</title>

    @* css *@
    <link href="~/Content/AlmondCss/index.css" rel="stylesheet" />
    <link href="~/Content/AlmondCss/navbar.css" rel="stylesheet" />
    <link href="~/Content/AlmondCss/footer.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

    @* js *@
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/Jquery.ajax/showQuestionAnswer.js"></script>


</head>

<body>
    <div class="container-fluid">
        <!--start Navbar-->
        <div class="row ">
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <div class="col-sm-8">
                        <div class="row gx-0">
                            <div class="col-sm-8 gx-0">
                                <a class="navbar-brand float-start" href="MainPage">
                                    <img src="~/Images/logo/almondLogo1rmvbg.png" style="margin-left: 1px;" height="100%"
                                         width="180px" alt="">
                                </a>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 text-end">
                        <div class="row">
                            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                                <div class="col-sm-8">
                                    @{
                                        if (User.Identity.IsAuthenticated)
                                        {
                                            <ul class="navbar-nav ">
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link  active dropdown-toggle" href="#" role="button"
                                                       data-bs-toggle="dropdown" aria-expanded="false">
                                                        Veri İşlemleri
                                                    </a>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a class="dropdown-item" href="AddData" target="_blank">
                                                                Veri
                                                                Ekle
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="UpdateData"
                                                               target="_blank">Veri Guncelle</a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item" href="DeleteData" target="_blank">
                                                                Veri
                                                                Sil
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active" title="Liste oluşturma,guncelleme ve silme işlemleri" aria-current="page" href="ListOperations"
                                                       target="_blank">
                                                        Liste İşlemleri
                                                    </a>

                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link active" aria-current="page" href="AllData"
                                                       target="_blank">
                                                        Verilerim
                                                    </a>
                                                </li>
                                            </ul>
                                        }
                                    }
                                </div>
                                <div class="col-sm-4">
                                    <!-- Giriş Yap- Kayıt ol  Buton -->
                                    <div class="dropdown-center ">
                                        <div class="btn-group btn-sm" style="width: 100%;">
                                            @{
                                                if (!User.Identity.IsAuthenticated)
                                                {
                                                    <a href="/Home/Login" title="Giriş Yap:)" class="btn btn-outline-success" style="width:80%">Giriş Yap</a>
                                                }
                                                else
                                                {
                                                    if (User.Identity.Name.Length > 10)
                                                    {
                                                        @*<button class="btn btn-outline-success" style="width:80%">@user.Name.Substring(0, 10).</button>*@
                                                        <button class="btn btn-outline-success" style="width:80%">@User.Identity.Name</button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-outline-success" style="width:80%">@User.Identity.Name</button>
                                                    }
                                                }
                                            }
                                            <button type="button" class="btn btn-outline-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false">
                                                <span class="visually-hidden">Toggle Dropdown</span>
                                            </button>

                                            <ul class="dropdown-menu dropdown-menu-lg-end">
                                                @if (!User.Identity.IsAuthenticated)
                                                {
                                                    <li>
                                                        @* kayıt ol *@
                                                        <a class="dropdown-item" href="Register">
                                                            <span>
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-vcard" viewBox="0 0 16 16">
                                                                    <path d="M5 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4Zm4-2.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5ZM9 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4A.5.5 0 0 1 9 8Zm1 2.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5Z" />
                                                                    <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2ZM1 4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H8.96c.026-.163.04-.33.04-.5C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1.006 1.006 0 0 1 1 12V4Z" />
                                                                </svg>
                                                            </span>Kayıt Ol
                                                        </a>
                                                    </li>
                                                }
                                                <li>
                                                    @*  Yeni Özellik Öner? *@
                                                    <a class="dropdown-item " href="SuggestFeature">
                                                        <span class="chakra-menu__icon-wrapper css-7halv9">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="chakra-menu__icon" focusable="false" aria-hidden="true"><path d="M16 16h6"></path><path d="M19 13v6"></path><path d="M21 10V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l2-1.14"></path><path d="M16.5 9.4 7.55 4.24"></path><polyline points="3.29 7 12 12 20.71 7"></polyline><line x1="12" x2="12" y1="22" y2="12"></line></svg>
                                                        </span>  Yeni Özellik Öner?
                                                    </a>
                                                </li>
                                                <li>
                                                    @* İletişim *@
                                                    <a class="dropdown-item" href="Contact">
                                                        <span>
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                                                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                                            </svg>
                                                        </span>İletişim
                                                    </a>
                                                </li>
                                                @if (User.Identity.IsAuthenticated)
                                                {
                                                    <li>
                                                        <a class="dropdown-item " href="Logout">
                                                            <span>
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="chakra-menu__icon" focusable="false" aria-hidden="true"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" x2="9" y1="12" y2="12"></line></svg>
                                                            </span>  Çıkış Yap
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div><!--end Navbar-->

    <main class="container-fluid">
        @RenderBody()
    </main>

    <div>
        <footer>
            <!--start Footer-->
            <div class="footer bg-dark text-align">
                <div class="row text-align gx-0">
                    <div class="col-sm-12 text-center" style="margin-top:-23px;margin-bottom:20px">
                        <a href="https://www.linkedin.com/in/ali-teke%C5%9F-b23aba247/" title="Linkedin" target="_blank ">
                            <i class="fa fa-linkedin height=10px mx-3" style="color: blanchedalmond;"></i>
                        </a>
                        <a href="https://github.com/alitekes1" title="Projenin kodlarına buradan ulaşabilirsiniz." target="_blank">
                            <i class="fa fa-github mx-3"
                               style="color: antiquewhite;"></i>
                        </a>
                    </div>
                </div>
                <div class="row gx-0">
                    <div class="col-sm-3">

                    </div>
                    <div class="col-sm-6  text-align">
                        <ul>
                            <div class="row gx-0 text-align">
                                <div class="col-sm-3">
                            <li><a href="http://alitekes.com.tr">Ben,Kendim</a></li>
                    </div>
                    <div class="col-sm-3">
                        <li><a href="#">Proje Detayları</a></li>
                    </div>
                    <div class="col-sm-3">
                        <li><a href="#">Yeni bir özellik öner?</a></li>
                    </div>
                    <div class="col-sm-3">
                        <li><a href="Contact">İletişim</a></li>
                    </div>
                </div>
                </ul>
            </div>
            <div class="col-sm-3">

            </div>
        </footer>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous">

    </script>

</body>
</html>
