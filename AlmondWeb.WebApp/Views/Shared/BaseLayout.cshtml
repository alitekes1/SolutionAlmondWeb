
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | AlmondWeb</title>
    <link href="~/Content/AlmondCss/index.css" rel="stylesheet" />
    <link href="~/Content/AlmondCss/navbar.css" rel="stylesheet" />
    <link href="~/Content/AlmondCss/footer.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/AlmondJs/index.js"></script>
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <div class="container-fluid">
        <!--start Navbar-->
        <div class="row ">
            <nav class="navbar navbar-expand-lg bg-body-tertiary">
                <div class="container-fluid">
                    <div class="col-sm-8">
                        <div class="row gx-0">
                            <div class="col-sm-8 gx-0">
                                <a class="navbar-brand " href="MainPage">
                                    <img src="~/Images/logo/almondLogo1rmvbg.png" style="margin-left: 1px;" height="100%"
                                         width="180px" alt="">
                                </a>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4 text-end">
                        <div class="row">
                            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                                <div class="col-sm-8">
                                    <ul class="navbar-nav ">
                                        <li class="nav-item dropdown">
                                            <a class="nav-link  active dropdown-toggle" href="#" role="button"
                                               data-bs-toggle="dropdown" aria-expanded="false">
                                                Veri İşlemleri
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="AddData" target="_blank">
                                                        Veri
                                                        Ekle
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="UpdateData"
                                                       target="_blank">Veri Guncelle</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="DeleteData" target="_blank">
                                                        Veri
                                                        Sil
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="ListOperations"
                                               target="_blank">
                                                Liste İşlemleri
                                            </a>

                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link active" aria-current="page" href="AllData"
                                               target="_blank">
                                                Verilerim
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-sm-4">
                                    <!-- Giriş Yap- Kayıt ol  Buton -->
                                    <div class="dropdown-center">
                                        <div class="btn-group  btn-sm" style="width: 100%;">
                                            @Html.ActionLink("Giriş Yap", "Login", null, new
                                       {
                                           @class = "btn btn-outline-success",
                                               style = "width: 80%;"
                                       })

                                            <button type="button"
                                                    class="btn btn-outline-success dropdown-toggle dropdown-toggle-split"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                <span class="visually-hidden">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="Register">Kayıt Ol</a></li>
                                                <li><a class="dropdown-item" href="Contact">İletişim</a></li>
                                                <li><a class="dropdown-item" href="#">Yeni bir özellik öner?</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div><!--end Navbar-->

    <main class="container-fluid mb-2">
        @RenderBody()
    </main>

    <div>
        <footer>
            <!--start Footer-->
            <div class="footer bg-dark text-align" style="margin-top:40px">
                <div class="row text-align gx-0">
                    <div class="col-sm-12 text-center" style="margin-top:-22px;margin-bottom:20px">
                        <a href="https://www.linkedin.com/in/ali-teke%C5%9F-b23aba247/" title="Linkedin" target="_blank ">
                            <i class="fa fa-linkedin height=10px mx-3" style="color: blanchedalmond;"></i>
                        </a>
                        <a href="https://github.com/alitekes1" title="Projenin kodlarına buradan ulaşabilirsiniz." target="_blank">
                            <i class="fa fa-github mx-3"
                               style="color: antiquewhite;"></i>
                        </a>
                    </div>
                </div>
                <div class="row gx-0">
                    <div class="col-sm-3">

                    </div>
                    <div class="col-sm-6 text-align">
                        <ul>
                            <div class="row gx-0 text-align">
                                <div class="col-sm-3">
                            <li><a href="http://alitekes.com.tr">Ben,Kendim</a></li>
                    </div>
                    <div class="col-sm-3">
                        <li><a href="#">Proje Detayları</a></li>
                    </div>
                    <div class="col-sm-3">
                        <li><a href="#">Yeni bir özellik öner?</a></li>
                    </div>
                    <div class="col-sm-3">
                        <li><a href="Contact">İletişim</a></li>
                    </div>
                </div>
                </ul>
            </div>
            <div class="col-sm-3">

            </div>
        </footer>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous">

    </script>

</body>
</html>
