@using AlmondWeb.Entities
@model List<ProfileListTable>
@{
    int currentUserID = CacheHelper.CurrentUserID();
    ListManager lm = new ListManager();
    List<ListTable> data = lm.ListwithExpression(x => x.Owner.Id == currentUserID);

}
<link href="~/Content/AlmondCss/ProfileLists.css" rel="stylesheet" />
<div class="row my-3">
    @foreach (var item in data)
    {
        <div class="col-sm-3 mb-5 d-flex justify-content-center">
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        @if (item.listName.Length > 18)
                        {

                            <p title="@item.listName" class="title text-danger text-sm-center ">@item.listName.Substring(0, 15)...</p>
                        }
                        else
                        {
                            <p class="title text-danger">@item.listName</p>
                        }
                        <p>@@@item.Owner.Username</p>
                        @if (!item.listDescription.IsEmpty())
                        {
                            <p> @item.listDescription</p>
                        }
                        else
                        {
                            <p>@string.Empty</p>
                        }
                    </div>
                    <div class="flip-card-back ">
                        <label class="backListName mx-2 fs-5 text-center">@item.listName</label><hr />
                        @{
                            int totalSaved = item.List.Count() - 1;
                        }
                        <span class="backside text-dark text-start mx-2 my-1">
                            <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 384 512"><path d="M0 48V487.7C0 501.1 10.9 512 24.3 512c5 0 9.9-1.5 14-4.4L192 400 345.7 507.6c4.1 2.9 9 4.4 14 4.4c13.4 0 24.3-10.9 24.3-24.3V48c0-26.5-21.5-48-48-48H48C21.5 0 0 21.5 0 48z" /></svg>
                            <label class="text-dark">Toplam Kaydedilme : @totalSaved</label>
                        </span>
                        @{
                            string listType = item.isPublic ? "Herkese Açık" : "Gizli";
                        }
                        <span class="backside text-dark text-start mx-2 my-1">
                            <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 512 512"><path d="M57.7 193l9.4 16.4c8.3 14.5 21.9 25.2 38 29.8L163 255.7c17.2 4.9 29 20.6 29 38.5v39.9c0 11 6.2 21 16 25.9s16 14.9 16 25.9v39c0 15.6 14.9 26.9 29.9 22.6c16.1-4.6 28.6-17.5 32.7-33.8l2.8-11.2c4.2-16.9 15.2-31.4 30.3-40l8.1-4.6c15-8.5 24.2-24.5 24.2-41.7v-8.3c0-12.7-5.1-24.9-14.1-33.9l-3.9-3.9c-9-9-21.2-14.1-33.9-14.1H257c-11.1 0-22.1-2.9-31.8-8.4l-34.5-19.7c-4.3-2.5-7.6-6.5-9.2-11.2c-3.2-9.6 1.1-20 10.2-24.5l5.9-3c6.6-3.3 14.3-3.9 21.3-1.5l23.2 7.7c8.2 2.7 17.2-.4 21.9-7.5c4.7-7 4.2-16.3-1.2-22.8l-13.6-16.3c-10-12-9.9-29.5 .3-41.3l15.7-18.3c8.8-10.3 10.2-25 3.5-36.7l-2.4-4.2c-3.5-.2-6.9-.3-10.4-.3C163.1 48 84.4 108.9 57.7 193zM464 256c0-36.8-9.6-71.4-26.4-101.5L412 164.8c-15.7 6.3-23.8 23.8-18.5 39.8l16.9 50.7c3.5 10.4 12 18.3 22.6 20.9l29.1 7.3c1.2-9 1.8-18.2 1.8-27.5zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256z" /></svg>
                            <label class="text-dark">Türü : @listType  </label>
                        </span>

                        <a href="/Liste-Islemleri" class="btn btn-dark mx-4 my-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                            <label class="small">Düzenle</label>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

