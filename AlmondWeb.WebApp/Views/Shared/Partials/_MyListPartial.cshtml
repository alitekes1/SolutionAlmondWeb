@using AlmondWeb.Entities
@{
    int currentUserID = CacheHelper.CurrentUserID();
    ListManager lm = new ListManager();
    List<ListTable> data = lm.ListwithExpression(x => x.Owner.Id == currentUserID);

}
<link href="~/Content/AlmondCss/ProfileLists.css" rel="stylesheet" />
<div class="row my-3">
    @foreach (var item in data)
    {
        <div class="col-sm-3 mb-5 d-flex justify-content-center">
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        @if (item.listName.Length > 13)
                        {
                            <p class="title text-danger">@item.listName.Substring(0, 11)...</p>
                        }
                        else
                        {
                            <p class="title text-danger">@item.listName</p>
                        }
                        <p>@@@item.Owner.Username</p>
                        @if (!item.listDescription.IsEmpty())
                        {
                            <p> @item.listDescription</p>
                        }
                        else
                        {
                            <p>Açıklama eklenmemiş.</p>
                        }
                    </div>
                    <div class="flip-card-back">
                        @if (!item.isPublic)
                        {
                            <p class="text-dark mx-3 text-start">Türü:Herkese Açık</p>
                        }
                        else
                        {
                            <p class="text-dark mx-3 text-start">Türü:Gizli</p>
                        }
                        <p class="text-dark mx-3 text-start">Toplam Veri Adedi:15</p>
                        <p class="text-dark mx-3 text-start">Oluş. Tarihi:@item.createdTime.ToShortDateString()</p>
                        <a href="/Liste-Islemleri" class="btn btn-dark btn-sm mx-3">Düzenle</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

