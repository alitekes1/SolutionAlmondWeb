@{
    int counter = 0;
    int currentUserID = CacheHelper.CurrentUserID();

    ListManager lm = new ListManager();
    var list = lm.ListwithExpression(x => x.Owner.Id == currentUserID && x != null).OrderByDescending(x => x.Id);

    var listCount = list.GroupBy(x => x.listName).ToList();
    string listType = string.Empty;
}
<div class="col-sm-12 bloklar" id="example">
    <div class="tbl-header">
        <div class="cell-border  hover" style="text-align:center;width:100%;">
            <table style="width: 100%; text-align: center; margin-bottom: 0;" class="table table-hover table-bordered table-responsive">
                <thead class="bg-success bg-opacity-50">
                    <tr>
                        <th class="text-center" style="width:10%">#</th>
                        <th class="text-center" style="width:20%">Liste</th>
                        <th class="text-center" style="width:10%">Türü</th>
                        <th class="text-center" style="width:40%">Açıklama</th>
                        <th class="text-center" style="width:10%">Guncelle</th>
                        <th class="text-center" style="width:10%">Sil</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <div style="width:100%;overflow:auto;  max-height:530px;">
        <table style="width:100%;" class="text-center table table-hover table-bordered table-responsive">
            @if (list.Count() == 0 || list is null)
            {
                <tr>
                    <td>
                        Kayıtlı listeniz bulunmamaktadır.Sol üstte bulunan "
                        <span class="fst-italic">Liste Oluştur</span>" butonundan liste ekleyebilirsiniz.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in list)
                {
                    counter++;
                    <tr>
                        <td class="text-center" width="10%">@counter</td>
                        <td class="text-center" width="20%">@item.listName</td>
                        <td class="text-center" width="10%">
                            @{
                                listType = item.isPublic ? "Herkese Açık" : "Gizli";
                            }
                            @listType
                        </td>
                        <td class="text-center" width="40%">@item.listDescription</td>



                        <td class="text-center" width="10%">
                            @* Güncelle Butonu *@
                            <button type="button" class="btntableDelete" onclick="transfertoUpdateData('@item.listName','@item.Id')" data-bs-toggle="modal" data-bs-target="#exampleModalguncelleliste">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil icon" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                                </svg>
                            </button>
                            <div class="modal fade" id="exampleModalguncelleliste" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5">Listenin ismini güncelleyebilirsiniz.</h1>
                                            <a class="btn-close" id="btn-close3" data-bs-dismiss="modal" aria-label="Close"></a>
                                        </div>
                                        <div class="modal-body">
                                            <div class="col form-check">
                                                <div class="row-sm-3">
                                                    <input type="text" id="inputTextUpdateList" class="form-control" autofocus name="textcreate" required aria-describedby="inputGroup-sizing-default" placeholder="@ViewData["placeholderinModelText"]">
                                                </div>
                                                <div class="row-sm-6 my-2">
                                                    <textarea class="form-control" id="ListdescriptionTextAreaUpdate" placeholder="Liste Açıklamasını giriniz.Sade ve anlaşılır bir açıklama olmasına özen gösteriniz." style="resize:none" rows="5"></textarea>
                                                </div>
                                                <div class="row-sm-3 text-start">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="flexRadioDefault2" id="publicRadioUpdate" value="0">
                                                        <label class="form-check-label" for="flexRadioDefault1">
                                                            Herkese Açık
                                                        </label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="flexRadioDefault2" value="1" id="privateRadioUpdate" checked>
                                                        <label class="form-check-label" for="flexRadioDefault2">
                                                            Gizli
                                                        </label>
                                                    </div>
                                                </div> <hr />
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-secondary" id="closeBtnUpdate23" data-bs-dismiss="modal">Vazgeç</button>
                                            <button type="submit" class="btn btn-success" id="confirmBtnUpdateList">Güncelle</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>

                        <td class="text-center" width="10%">
                            @* Sil Butonu *@
                            <button type="button" class="btntableDelete" onclick="transfertoDeleteData('@item.listName','@item.Id')" data-bs-toggle="modal" id="list_delete_@item.Id" data-bs-target="#exampleModalsilliste">
                                <svg viewBox="0 0 15 17.5" height="17.5" width="15" xmlns="http://www.w3.org/2000/svg" class="icon">
                                    <path transform="translate(-2.5 -1.25)" d="M15,18.75H5A1.251,1.251,0,0,1,3.75,17.5V5H2.5V3.75h15V5H16.25V17.5A1.251,1.251,0,0,1,15,18.75ZM5,5V17.5H15V5Zm7.5,10H11.25V7.5H12.5V15ZM8.75,15H7.5V7.5H8.75V15ZM12.5,2.5h-5V1.25h5V2.5Z" id="Fill"></path>
                                </svg>
                            </button>
                            @(Html.Partial("Partials/ModelPopUp/_SilModalPartial", new ViewDataDictionary

                                      {
                                        {"modelHeader","Aşağıdaki liste silinecek.Emin misiniz?"},
                                        {"not","*İlgili listenin içindeki veriler silinmez.Sileceğiniz listede bulunan verilerin artık bir listesi olmaz.Listeye sahip olmayan veriler Anasayfa da karşına çıkarılmaz.(--Listesiz--)"}
                                      })

                             )
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
