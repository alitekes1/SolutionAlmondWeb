@using AlmondWeb.WebApp.CacheHelper
@using AlmondWeb.BusinessLayer
@{
    string sil = "Sil";
    int counter = 0;

    int currentUserID = CacheHelper.CurrentUserID();
    DataManager dm = new DataManager();
    var tableData = dm.ListwithExpression(x => x.Owner.Id == currentUserID).OrderByDescending(x => x.Id);//current user a ait dataları listeliyoruz.
}
<style>
    .btntableDelete {
        background-color: transparent;
        position: relative;
        border: none;
    }

    .icon {
        transform: scale(1.2);
        transition: .2s linear;
    }

    .btntableDelete:hover > .icon {
        transform: scale(1.5);
    }

    .btntableDelete:hover::after {
        visibility: visible;
        opacity: 1;
        top: -160%;
    }
</style>
<div id="example">
    <div class="tbl-header">
        <table style="width: 100%; text-align: center; margin-bottom: 0;" class="table table-hover table-responsive table-bordered">
            <thead class="bg-success bg-opacity-50">
                <tr>
                    <th class="text-center" style="width:5%">#</th>
                    <th class="text-center" style="width:30%">Soru</th>
                    <th class="text-center" style="width:30%">Cevap</th>
                    <th class="text-center" style="width:20%">Liste</th>
                    <th class="text-center" style="width:15%">Güncelle</th>
                </tr>
            </thead>
        </table>
    </div>
    <div style="width:100%;overflow:auto;  max-height:520px;">
        <table style="width:100%;" class="text-center table table-hover table-bordered table-responsive">
            @foreach (var item in tableData)
            {
                counter++;
                <tr>
                    <td class="text-center" style="width:5%">@counter</td>
                    <td class="text-center" style="width:30%">@item.question</td>
                    <td class="text-center" style="width:30%">@item.answer</td>
                    <td class="text-center" style="width:20%">@item.List.listName</td>
                    <td class="text-center" style="width:15%">
                        @if (ViewData["islemTuru"] == sil)
                        {
                            <button type="button" class="btntableDelete" onclick="movetoPopup('@item.question','@item.answer')" data-bs-toggle="modal" data-bs-target="#exampleModalsilliste">
                                <svg viewBox="0 0 15 17.5" height="17.5" width="15" xmlns="http://www.w3.org/2000/svg" class="icon">
                                    <path transform="translate(-2.5 -1.25)" d="M15,18.75H5A1.251,1.251,0,0,1,3.75,17.5V5H2.5V3.75h15V5H16.25V17.5A1.251,1.251,0,0,1,15,18.75ZM5,5V17.5H15V5Zm7.5,10H11.25V7.5H12.5V15ZM8.75,15H7.5V7.5H8.75V15ZM12.5,2.5h-5V1.25h5V2.5Z" id="Fill"></path>
                                </svg>
                            </button>

                            @(Html.Partial("Partials/ModelPopUp/_SilModalPartial", new ViewDataDictionary
                                      {
                                        {"modelHeader","Aşağıdaki veri silinecek.Emin misiniz?"},
                                        {"not","*Seçmiş olduğunuz veri geri alınamayacak şekilde silinecektir.Silmeden önce dikkatli olunuz."}
                                      })
                     )
                        }
                        else
                        {
                            <button class="btntableDelete" id="updateDatabutton" onclick="transferdataTotextarea('@item.question','@item.answer','@item.List.Id','@item.Id')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil icon" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                                </svg>
                            </button>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


<script>
    function transferToData(question) {
        let _question = document.getElementById("exampleModalsil");
        _question.innerText = question;

    };
    function transferdataTotextarea(question, answer, listId, dataId) {
        let _questionfortextarea = document.getElementById("exampleFormControlTextarea17");
        let _answerfortextarea = document.getElementById("exampleFormControlTextarea16");
        let _list = document.getElementById("liste-dropdown");
        let _dataId = document.getElementById("UpdateData_Id");

        _questionfortextarea.value = question;
        _answerfortextarea.value = answer;

        var options = _list.options;
        var selectedValue = listId;
        for (var i = 0; i < options.length; i++) {
            if (options[i].value == selectedValue) {
                options[i].selected = true;
            }
        }

        _dataId.setAttribute("value", dataId);

    };
    var submitbuton = document.getElementById("submitbtn");
    var isSelectedData = document.getElementById("UpdateData_Id");

    submitbuton.addEventListener("click", function () {
        if (isSelectedData.value == null) {
            return alert("Hangi veriyi güncellemek istediğinizi tablodaki kalem ikonuna tıklayarak seçiniz.");
        }
    });
    function movetoPopup(question, answer) {
        let _questionLabel = document.getElementById("_questionLabel");
        let _answerLabel = document.getElementById("_answerLabel");

        _questionLabel.innerText = question;
        _answerLabel.innerText = answer;
    }
</script>