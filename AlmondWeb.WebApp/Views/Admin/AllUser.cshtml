
@{
    ViewBag.Title = "Tüm kullanıcılar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ProfileManager pm = new ProfileManager();
    int counter = 0;
    List<ProfileTable> UserList = pm.List();
}
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<div id="page-wrapper">
    <div id="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Üye Tablosu
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover text-center"
                                   id="dataTables-example">
                                <thead>
                                    @{
                                        counter++;
                                    }
                                    <tr>
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Meslek</th>
                                        <th>Kayıt Tarihi</th>
                                        <th>Linkedin</th>
                                        <th>Github</th>
                                        <th>Aktiflik durumu</th>
                                        <th>Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in UserList)
                                    {
                                        <tr class="odd gradeX">
                                            <td>@counter</td>
                                            <td>@item.Owner.Name @item.Owner.Surname </td>
                                            <td>@item.job</td>
                                            <td>@item.Owner.createdTime</td>
                                            <td>@item.linkedinUrl</td>
                                            <td>@item.githubUrl</td>
                                            <td>@item.Owner.isActive</td>
                                            <td class="text-center">
                                                <button id="deleteUser" onclick="transferDeleteId('@item.Id')">
                                                    <svg xmlns="http://www.w3.org/2000/svg" height="1.5em" viewBox="0 0 640 512">
                                                        <path d="M96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3zM472 200H616c13.3 0 24 10.7 24 24s-10.7 24-24 24H472c-13.3 0-24-10.7-24-24s10.7-24 24-24z" />
                                                    </svg>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function transferDeleteId(id) {
        $.ajax({
            method: "GET",
            url: '/Admin/DeleteUser/' + id,
            success: function (result) {
                if (result > 0) {
                    ReLoadListData();
                    //toastr.success("İşlem başarılı.", "Kullanıcı pasif hale getirildi.", 500);
                    alert("merhaba");
                }
                else {
                    // toastr.warning("işlem başarısız", "işlem başarısız", 500);
                }
            }
        });
    };
    function ReLoadListData() {
        var table = $("#page-wrapper");
        $.ajax({
            method: "GET",
            url: '/AllUser',
            success: function (tableData) {
                table.empty(); // Tabloyu temizliyoruz

                table.append(tableData);
            }
        });
    }

</script>