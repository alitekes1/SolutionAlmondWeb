@using AlmondWeb.BusinessLayer
@using AlmondWeb.WebApp.CacheHelper

@{
    ViewBag.Title = "ListOperations";
    Layout = "~/Views/Shared/BaseLayout.cshtml";


}
<style>
    .buttoncreateList {
        --main-focus: #2d8cf0;
        --font-color: #323232;
        --bg-color-sub: #dedede;
        --bg-color: #eee;
        --main-color: #323232;
        position: relative;
        width: 170px;
        height: 40px;
        cursor: pointer;
        display: flex;
        align-items: center;
        border: 2px solid var(--main-color);
        box-shadow: 4px 4px var(--main-color);
        background-color: var(--bg-color);
        border-radius: 10px;
        overflow: hidden;
    }

    .buttoncreateList, .button__icon, .button__text {
        transition: all 0.3s;
    }

        .buttoncreateList .button__text {
            transform: translateX(22px);
            color: var(--font-color);
            font-weight: 600;
        }

        .buttoncreateList .button__icon {
            position: absolute;
            transform: translateX(109px);
            height: 100%;
            width: 39px;
            background-color: var(--bg-color-sub);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 15px;
        }

        .buttoncreateList .svg {
            width: 20px;
            fill: var(--main-color);
        }

    .btntableDelete {
        background-color: transparent;
        position: relative;
        border: none;
    }

    .icon {
        transform: scale(1.2);
        transition: .2s linear;
    }

    .btntableDelete:hover > .icon {
        transform: scale(1.5);
    }

    .btntableDelete:hover::after {
        visibility: visible;
        opacity: 1;
        top: -160%;
    }
</style>

<div class="col-sm-12 mb-2" style="padding-top:2px">
    <div class="gx-2">
        <div class="col-sm-12">
            @* Liste işlemlerinden liste ekleme butonu *@
            <button type="button" class="buttoncreateList mb-3" data-bs-toggle="modal" data-bs-target="#exampleModallisteolustur">
                <span class="button__text">Liste Oluştur</span>
                <span class="button__icon"><svg class="svg" fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><line x1="12" x2="12" y1="5" y2="19"></line><line x1="5" x2="19" y1="12" y2="12"></line></svg></span>
            </button>

            @* liste işlemlerinden liste ekleme popup ı *@
            <div class="modal fade" id="exampleModallisteolustur" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class=" modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Liste Oluştur</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Vazgeç"></button>
                        </div>
                        <div class="modal-body">
                            <input type="text" class="form-control" id="inputTextCreateList" autofocus name="textcreate" required aria-describedby="inputGroup-sizing-default" placeholder="Liste İsmi"><hr />
                            <p class="fst-italic fs-6" style="font-size:10px">*Oluşturmuş  olduğunuz listeye varolan verilerinizi aktarmak istiyorsanız Veri Güncelle sayfasından ilgili verinin listesini güncelleyebilirisiniz.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="reset" id="closeBtnCreateList" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                            <button type="submit" id="confirmBtnCreateList" class="btn btn-success">Oluştur</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.Action("FillTableForListOperations", "Home")
    </div>
</div>

<script>
    var table = $("#example");

    function transfertoUpdateData(lstnm, id) {
        var listContent = document.getElementById("inputTextUpdateList");
        listContent.value = lstnm;


        document.getElementById("confirmBtnUpdateList").addEventListener("click", function () {
            var listNme = $("#inputTextUpdateList").val();
            //var idm = $(this).data("Id");
            $.ajax({
                method: "POST",
                url: '/Home/UpdateList/' + id,
                data: { listName: listNme },
                success: function (result) {
                    if (result > 0) {
                        //işlem başarılı tablo tekrardan yüklenecek.
                        $.ajax({
                            method: "GET",
                            url: '/Home/FillTableForListOperations',
                            success: function (tableData) {
                                table.empty(); // Tabloyu temizliyoruz

                                table.append(tableData);
                            }
                        });
                    }
                    else {
                        alert("Liste güncelleme sırasında bir hata meyda geldi.");//TODO:sayfa otomatik olarak yenilenecek.
                    }
                },
                complete: function () {
                    $("#closeButtonUpdate").click();
                }
            });
        });
    };

    function transfertoDeleteData(data, idM) {
        let _list = document.getElementById("_questionLabel");
        _list.innerText = data;

        document.getElementById("confirmBtnDeleteList").addEventListener("click", function () {
            //let idM = $("#list_delete").data("Id");
            $.ajax({
                method: "POST",
                url: '/Home/DeleteList/' + idM,
                success: function (result) {
                    if (result > 0) {
                        //işlem başarılı tablo tekrardan yüklenecek.
                        $.ajax({
                            method: "GET",
                            url: '/Home/FillTableForListOperations',
                            success: function (tableData) {
                                table.empty(); // Tabloyu temizliyoruz

                                table.append(tableData);
                            }
                        });
                    }
                    else {
                        return alert("işlem başarısız:(");
                    }
                },
                complete: function () {
                    $("#closeBtnDeleteList").click();
                }
            });
        });
    };
    document.getElementById("confirmBtnCreateList").addEventListener("click", function () {
        //var deleteRow = $(this).closest("tr");
        var listName = $("#inputTextCreateList").val();
        $.ajax({
            method: "POST",
            url: '/Home/CreateList',
            data: { listNm: listName },
            success: function (result) {
                if (result > 0) {
                    //TODO:işlem başarılı toastr çıkacak.
                    $.ajax({
                        method: "GET",
                        url: '/Home/FillTableForListOperations',
                        success: function (tableData) {
                            table.empty(); // Tabloyu temizliyoruz

                            table.append(tableData);
                        }
                    });
                } else {
                    alert("Hata meydana geldi. 3 saniye içerisinde sayfa yeniden yüklenecek.");//TODO: sayfa 3 saniye içinde yenilenmesi gerekiyor.
                }
            },
            complete: function () {
                $("#closeBtnCreateList").click();
            }
        });
    });
    document.getElementById("confirmBtnDeleteList").addEventListener("click", function () {//popup işlemleri

    })

    function ReLoadListData() {
        $.ajax({
            method: "GET",
            url: '/Home/FillTableForListOperations',
            success: function (tableData) {
                table.empty(); // Tabloyu temizliyoruz

                table.append(tableData);
            }
        });
    }
</script>
