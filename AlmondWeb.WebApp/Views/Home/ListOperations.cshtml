
@{
    ViewBag.Title = "ListOperations";
    Layout = "~/Views/Shared/BaseLayout.cshtml";
}
<div>
    <script defer src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script defer src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <link defer href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script defer src="~/Scripts/AlmondJs/tableInizilation.js"></script>
</div>

<div class="container-fluid mt-2 mb-5">
    <div class="col-sm-12 ">
        <div class="gx-2 gy-2 ">
            <div class="container-fluid">
                <div class="col-sm-12">
                    @* Liste işlemlerinden liste ekleme butonu *@
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModallisteolustur">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
                            <path d="m.5 3 .04.87a1.99 1.99 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2Zm5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19c-.24 0-.47.042-.683.12L1.5 2.98a1 1 0 0 1 1-.98h3.672Z"></path>
                            <path d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5Z"></path>
                        </svg>
                        Liste Oluştur
                    </button>
                    @* liste işlemlerinden liste ekleme popup ı *@
                    <div class="modal fade" id="exampleModallisteolustur" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class=" modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Liste Oluştur</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Vazgeç"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="text" class="form-control" name="textcreate" aria-describedby="inputGroup-sizing-default" placeholder="Liste İsmi">
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                    <button type="button" class="btn btn-success">Oluştur</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 bloklar">
                <div class="container-fluid">
                    <table id="example" class="cell-border order-column hover" style="text-align:center;width:100% ;table-layout: fixed;">
                        <div class="row">
                        <thead class="bg-success bg-opacity-50">
                            <tr class="table-success">
                                <th style="width:10%">#</th>
                                <th style="width:60%">Liste</th>
                                <th style="width:15%">Guncelle</th>
                                <th style="width:15%">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="nowrap-cell ">1</td>
                                <td class="nowrap-cell">Kelime Kursum benim</td>
                                <td class="nowrap-cell table-light">
                                    <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModalguncelleliste">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                                        </svg>
                                    </button>
                                    @(Html.Partial("Partials/ModelPopUp/_GuncelleModalPartial",new ViewDataDictionary
                                      {
                                        {"AcceptButtoninModel","Güncelle"},
                                        {"placeholderinModelText","Liste ismi"},
                                        {"headertextinModel","xxx listesi guncellenecek"},
                                        {"modelID", "exampleModalguncelleliste" },
                                      })
                                        )
                                </td>
                                <td class="nowrap-cell table-light">
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModalsilliste">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                                        </svg>
                                    </button>
                                    @(Html.Partial("Partials/ModelPopUp/_SilModalPartial",new ViewDataDictionary
                                      {
                                        {"AcceptButtoninModel","Sil"},
                                        {"placeholderinModelText","Liste Silinecek"},
                                        {"headertextinModel","xxx listesi silinecek.Emin misiniz?"},
                                        {"modelID","exampleModalsilliste"},
                                        {"not","*İlgili listenin içindeki veriler silinmez.Sileceğiniz listede bulunan verilerin artık bir listesi olmaz."}
                                      })
                                        )
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

