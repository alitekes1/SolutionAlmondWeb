@model  List<AlmondWeb.Entities.AlmondDataTable>
@{
    ViewBag.Title = "ListOperations";
    Layout = "~/Views/Shared/BaseLayout.cshtml";
    int counter = 0;
}
<style>
    .buttoncreateList {
        --main-focus: #2d8cf0;
        --font-color: #323232;
        --bg-color-sub: #dedede;
        --bg-color: #eee;
        --main-color: #323232;
        position: relative;
        width: 170px;
        height: 40px;
        cursor: pointer;
        display: flex;
        align-items: center;
        border: 2px solid var(--main-color);
        box-shadow: 4px 4px var(--main-color);
        background-color: var(--bg-color);
        border-radius: 10px;
        overflow: hidden;
    }

    .buttoncreateList, .button__icon, .button__text {
        transition: all 0.3s;
    }

        .buttoncreateList .button__text {
            transform: translateX(22px);
            color: var(--font-color);
            font-weight: 600;
        }

        .buttoncreateList .button__icon {
            position: absolute;
            transform: translateX(109px);
            height: 100%;
            width: 39px;
            background-color: var(--bg-color-sub);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 15px;
        }

        .buttoncreateList .svg {
            width: 20px;
            fill: var(--main-color);
        }

    .btntableDelete {
        background-color: transparent;
        position: relative;
        border: none;
    }

    .icon {
        transform: scale(1.2);
        transition: .2s linear;
    }

    .btntableDelete:hover > .icon {
        transform: scale(1.5);
    }

    .btntableDelete:hover::after {
        visibility: visible;
        opacity: 1;
        top: -160%;
    }
</style>
<div>
    <script defer src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script defer src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <link defer href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script defer src="~/Scripts/AlmondJs/tableInizilation.js"></script>
</div>

<div class="col-sm-12 mb-2" style="padding-top:2px">
    <div class="gx-2">
        <div class="col-sm-12">
            @* Liste işlemlerinden liste ekleme butonu *@

            <button type="button" class="buttoncreateList" data-bs-toggle="modal" data-bs-target="#exampleModallisteolustur">
                <span class="button__text">Liste Oluştur</span>
                <span class="button__icon"><svg class="svg" fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><line x1="12" x2="12" y1="5" y2="19"></line><line x1="5" x2="19" y1="12" y2="12"></line></svg></span>
            </button>
            @*<button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModallisteolustur">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
                        <path d="m.5 3 .04.87a1.99 1.99 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2Zm5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19c-.24 0-.47.042-.683.12L1.5 2.98a1 1 0 0 1 1-.98h3.672Z"></path>
                        <path d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5Z"></path>
                    </svg>
                    Liste Oluştur
                </button>*@
            @* liste işlemlerinden liste ekleme popup ı *@
            <div class="modal fade" id="exampleModallisteolustur" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class=" modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Liste Oluştur</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Vazgeç"></button>
                        </div>
                        <div class="modal-body">
                            <input type="text" class="form-control" autofocus name="textcreate" required aria-describedby="inputGroup-sizing-default" placeholder="Liste İsmi"><hr />
                            <p class="fst-italic fs-6" style="font-size:10px">*Oluşturmuş  olduğunuz listeye varolan verilerinizi aktarmak istiyorsanız <a href="/Home/UpdateData" title="Veri Guncelle sayfasına gider">Veri Güncelle</a> sayfasından ilgili verinin listesini güncelleyebilirisiniz.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                            <a href="#" type="submit" class="btn btn-success">Oluştur</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-12 bloklar">
            <table id="example" class="cell-border  hover" style="text-align:center;width:100%;">
                <thead class="bg-success bg-opacity-50 ">
                    <tr>
                        <th class="text-center" style="width:10%">#</th>
                        <th class="text-center" style="width:50%">Liste</th>
                        <th class="text-center" style="width:10%">Kay. Veri Adedi </th>
                        <th class="text-center" style="width:15%">Guncelle</th>
                        <th class="text-center" style="width:15%">Sil</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        counter++;
                        <tr>
                            <td class="nowrap-cell ">@counter</td>
                            <td class="nowrap-cell">@item.List.listName</td>
                            <td class="nowrap-cell">55</td>
                            <td class="nowrap-cell table-light">
                                <button type="button" class="btntableDelete" onclick="transfertoUpdateData('@item.List.listName')" id="updatelist" data-bs-toggle="modal" data-bs-target="#exampleModalguncelleliste">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil icon" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                                    </svg>
                                </button>
                                @(Html.Partial("Partials/ModelPopUp/_GuncelleModalPartial",new ViewDataDictionary
                                      {
                                        {"placeholderinModelText","Yeni liste ismini giriniz."},
                                        {"modelID", "exampleModalguncelleliste" }
                                      })
                                        )
                            </td>
                            <td class="nowrap-cell table-light">
                                <button type="button" class="btntableDelete" onclick="transfertoDeleteData('@item.List.listName')" data-bs-toggle="modal" id="deleteList" data-bs-target="#exampleModalsilliste">
                                    <svg viewBox="0 0 15 17.5" height="17.5" width="15" xmlns="http://www.w3.org/2000/svg" class="icon">
                                        <path transform="translate(-2.5 -1.25)" d="M15,18.75H5A1.251,1.251,0,0,1,3.75,17.5V5H2.5V3.75h15V5H16.25V17.5A1.251,1.251,0,0,1,15,18.75ZM5,5V17.5H15V5Zm7.5,10H11.25V7.5H12.5V15ZM8.75,15H7.5V7.5H8.75V15ZM12.5,2.5h-5V1.25h5V2.5Z" id="Fill"></path>
                                    </svg>
                                </button>
                                @(Html.Partial("Partials/ModelPopUp/_SilModalPartial",new ViewDataDictionary
                                      {
                                        {"modelID","modelListNameDelete"},
                                        {"modelHeader","Aşağıdaki liste silinecek.Emin misiniz?"},
                                        {"not","*İlgili listenin içindeki veriler silinmez.Sileceğiniz listede bulunan verilerin artık bir listesi olmaz."}
                                      })
                                        )
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function transfertoUpdateData(listName) {
        var listContent = document.getElementById("modelTextUpdate");
        listContent.value = listName;
    };
    function transfertoDeleteData(listName) {
        var header = document.getElementById("modelListNameDelete");
        header.innerText = listName;
    };
</script>