@{
    ViewBag.Title = "Liste İşlemleri";
    Layout = "~/Views/Shared/BaseLayout.cshtml";
}
<link href="~/Content/AlmondCss/Listcheckbox.css" rel="stylesheet" />

<div class="col-sm-12 mb-2" style="padding-top:2px">
    <div class="gx-2">
        <div class="row">
            @* Liste işlemlerinden liste ekleme butonu *@
            <div class="col-sm-3">
                <button type="button" class="buttoncreateList mb-3" data-bs-toggle="modal" data-bs-target="#exampleModallisteolustur">
                    <span class="button__text">Liste Oluştur</span>
                    <span class="button__icon"><svg class="svg" fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><line x1="12" x2="12" y1="5" y2="19"></line><line x1="5" x2="19" y1="12" y2="12"></line></svg></span>
                </button>
            </div>
            <div class="col-sm-7"></div>
            @* Liste işlemlerinden liste Keşfetme butonu *@
            <div class="col-sm-2">
                <a href="/Liste-Kesfet" class="buttonx type1 w-100 h-75 float-end mb-3 bg-secondary-subtle">
                    <label class="w-100 h-100 text-center pt-2 font-monospace">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-binoculars" viewBox="0 0 16 16">
                            <path d="M3 2.5A1.5 1.5 0 0 1 4.5 1h1A1.5 1.5 0 0 1 7 2.5V5h2V2.5A1.5 1.5 0 0 1 10.5 1h1A1.5 1.5 0 0 1 13 2.5v2.382a.5.5 0 0 0 .276.447l.895.447A1.5 1.5 0 0 1 15 7.118V14.5a1.5 1.5 0 0 1-1.5 1.5h-3A1.5 1.5 0 0 1 9 14.5v-3a.5.5 0 0 1 .146-.354l.854-.853V9.5a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v.793l.854.853A.5.5 0 0 1 7 11.5v3A1.5 1.5 0 0 1 5.5 16h-3A1.5 1.5 0 0 1 1 14.5V7.118a1.5 1.5 0 0 1 .83-1.342l.894-.447A.5.5 0 0 0 3 4.882V2.5zM4.5 2a.5.5 0 0 0-.5.5V3h2v-.5a.5.5 0 0 0-.5-.5h-1zM6 4H4v.882a1.5 1.5 0 0 1-.83 1.342l-.894.447A.5.5 0 0 0 2 7.118V13h4v-1.293l-.854-.853A.5.5 0 0 1 5 10.5v-1A1.5 1.5 0 0 1 6.5 8h3A1.5 1.5 0 0 1 11 9.5v1a.5.5 0 0 1-.146.354l-.854.853V13h4V7.118a.5.5 0 0 0-.276-.447l-.895-.447A1.5 1.5 0 0 1 12 4.882V4h-2v1.5a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V4zm4-1h2v-.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5V3zm4 11h-4v.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5V14zm-8 0H2v.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5V14z" />
                        </svg>
                        Liste Keşfet
                    </label>
                </a>
            </div>
        </div>

        @* liste işlemlerinden liste ekleme popup ı *@
        <div class="modal fade" id="exampleModallisteolustur" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class=" modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Liste Oluştur</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Vazgeç"></button>
                    </div>
                    <div class="modal-body">
                        <div class="col form-check">
                            <div class="row-sm-3">
                                <input type="text" class="form-control" id="inputTextCreateList" autofocus name="textcreate" required aria-describedby="inputGroup-sizing-default" placeholder="Liste İsmi">
                            </div>

                            <div class="row-sm-6 my-2">
                                <textarea class="form-control" id="listDescriptionTextArea" placeholder="Liste Açıklamasını giriniz.Sade ve anlaşılır bir açıklama olmasına özen gösteriniz." style="resize:none" rows="5"></textarea>
                            </div>

                            <div class="row-sm-3 text-center">
                                <span>
                                    Herkese Açık mı?
                                </span>
                                <label class="checkbox">
                                    <input type="checkbox" name="checkbox1" value="0" id="checkbox1">
                                    <div class="checkbox-circle">
                                        <svg viewBox="0 0 52 52" class="checkmark">
                                            <circle fill="none" r="25" cy="26" cx="26" class="checkmark-circle"></circle>
                                            <path d="M16 26l9.2 8.4 17.4-21.4" class="checkmark-kick"></path>
                                        </svg>
                                    </div>
                                </label>
                            </div> <hr />

                        </div>
                        <p class="fst-italic fs-6 small" style="font-size:10px">*Oluşturmuş  olduğunuz listeye varolan verilerinizi aktarmak istiyorsanız Veri Güncelle sayfasından ilgili verinin listesini güncelleyebilirisiniz.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" id="closeBtnCreateList" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                        <button type="submit" id="confirmBtnCreateList" class="btn btn-success">Oluştur</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Action("FillTableForListOperations", "Home")
</div>
</div>
<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/Jquery.ajax/ListOperationsAjax.js"></script>
