                                        <br>
                                    </div>
                                    <div class="row-sm-3">
                                        <div class="col-sm-3 " style=" display: inline-block;width:80%">
                                            <select class="form-select bg-white " aria-label="Default select example">
                                                <option selected disabled>Liste Seçiniz</option>
                                                <option value="1">One</option>
                                                <option value="2">Two</option>
                                                <option value="3">Three</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row-sm-3 mt-1">
                                        <a href="#" class="btn btn-success verieklebtn">Kaydet</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-sm-8 ">
                    @Html.Partial("Partials/_UpdateDeleteTablePartial", new ViewDataDictionary
                    {
                    {"islemturu","Guncelle" },
                    {"islemturuLogosu","sil"}
                    })
                </div>
            </div>
        </div>
    </div>



