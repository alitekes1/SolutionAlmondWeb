    Layout = "~/Views/Shared/BaseLayout.cshtml";
}

<link href="~/Content/AlmondCss/veriekle.css" rel="stylesheet" />
<link href="~/Content/Datatable.css" rel="stylesheet" />
    <div class="container-fluid">
        <div class="container mt-5">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-container">
                        <div class="col-sm-12">
                            @using (Html.BeginForm())
                            {
                                <div class="row">
                                    <div class="row-sm-3 form-group shadow-textarea textareas ">
                                        <textarea class="form-control z-depth-1" id="exampleFormControlTextarea7" cols="20"
                                                  rows="10" placeholder="Tablodan güncellemek istediğiniz veriyi seçiniz." autofocus></textarea>
                                        <br>
                                    </div>
                                    <div class="row-sm-3 form-group shadow-textarea textareas ">
