
@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/BaseLayout.cshtml";
}
<link href="~/Content/AlmondCss/sliderBoyut.css" rel="stylesheet" />

<div class="row mb-5 ">
    <div class="col-sm-9 gx-0">
        <div id="carouselExampleAutoplaying" class="carousel slide " data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Images/background/contactimg.jpg" class="imglar d-block w-100 " alt="bg">
                </div>
                <div class="carousel-item">
                    <img src="~/Images/background/sea.jpg" class=" imglar d-block w-100 " alt="bg" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" hidden data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" hidden data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="col-sm-3 bg-light">
        <h2 class="my-4" style="text-align: center; font-family:Dubai">İletişim</h2>
        <form action="/" method="post">

            <div class="input-group mb-3">
                <input type="text" class="form-control" required autofocus placeholder="Ad" aria-label="Name"
                       aria-describedby="basic-addon1">

            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" required placeholder="Soyad" aria-label="Username"
                       aria-describedby="basic-addon1">
            </div>

            <div class="mb-3">
                <input type="email" required class="form-control" placeholder="E-mail" aria-label="Recipient's username"
                       aria-describedby="basic-addon2">
            </div>

            <div class="input-group mb-3">
                <label for="Konu"></label>
                <select class="form-select" required aria-label="Konu">
                    <option selected disabled>Konu</option>
                    <option value="1">Tavsiye</option>
                    <option value="2">Teşekkür</option>
                    <option value="3">Site hakkında</option>
                    <option value="4">Yeni bir özellik öner?</option>
                    <option value="5">Diğer</option>
                </select>
            </div>

            <div class="input-group">
                <span class="input-group-text">Mesaj</span>
                <textarea class="form-control" required rows="12" style="resize:none" maxlength="600" aria-label="With textarea"></textarea>
            </div>

            <div>
                <div class="row">
                    <div class="col-sm-12 mt-4">
                        <button type="submit" href="#" class="btn btn-success mt-2" style="text-align: center; width: 100% ;padding-top:10px"> Gonder</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
