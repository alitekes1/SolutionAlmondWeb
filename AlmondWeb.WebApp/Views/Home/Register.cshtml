@model  AlmondWeb.BusinessLayer.ViewModels.RegisterModel
@{
    ViewBag.Title = "Kayıt Ol";
    Layout = "~/Views/Shared/LoginRegisterLayout.cshtml";
}
<div class="row-sm-3">
    @Html.ValidationSummary(true)
</div>

@using (Html.BeginForm("Register", "Home", "POST"))
{
    <div class="row-sm-3">
        <div class="col-sm-12">
            <h2 class="girisyapyazi">Kayıt Ol</h2>
        </div>
        <div class="pb-2">
            <h6 style="float: left;color: gray;">
                Hesabın Var mı? @Html.ActionLink("Giriş Yap", "Login")
            </h6>
        </div>
    </div>
    <div class="form-floating row-sm-2 mt-3">
        @Html.TextBoxFor(x => x.name, new { @class = "form-control border border-secondary-subtle", id = "formGroupExampleInput", placeholder = "Ad", autofocus = "autofocus" })
        <label for="floatingPassword">Ad</label>
        <p class="text-danger text-sm-start" style="font-size: 13px;">@Html.ValidationMessageFor(x => x.name)</p>
    </div>
    <div class="form-floating row-sm-2 mt-2">
        @Html.TextBoxFor(x => x.surname, new { @class = "form-control border border-secondary-subtle", id = "formGroupExampleInput", placeholder = "Soyad" })
        <label for="floatingPassword">Soyad</label>
        <p class="text-danger text-sm-start" style="font-size: 13px;">@Html.ValidationMessageFor(x => x.surname)</p>
    </div>
    <div class="form-floating row-sm-2">
        @Html.TextBoxFor(x => x.email, new { @class = "form-control border border-secondary-subtle", id = "formGroupExampleInput", placeholder = "Email", type = "email" })
        <label for="floatingPassword">E-mail</label>
        <p class="text-danger text-sm-start" style="font-size: 13px;">@Html.ValidationMessageFor(x => x.email)</p>
    </div>
    <div class="form-floating row-sm-2">
        @Html.TextBoxFor(x => x.password, new { @class = "form-control border border-secondary-subtle", id = "formGroupExampleInput", placeholder = "Şifre", type = "password" })
        <label for="floatingPassword">Şifre </label>
        <p class="text-danger text-sm-start" style="font-size: 13px;">@Html.ValidationMessageFor(x => x.password)</p>
    </div>
    <div class="form-floating row-sm-2">
        @Html.TextBoxFor(x => x.password2, new { @class = "form-control border border-secondary-subtle", id = "formGroupExampleInput", placeholder = "Şifre(Tekrar)", type = "password" })
        <label for="floatingPassword">Şifre (Tekrar)</label>
        <p class="text-danger text-sm-start" style="font-size: 13px;">@Html.ValidationMessageFor(x => x.password2)</p>
    </div>

    <div id="passwordHelpBlock" class="form-text ">
        *Şifreniz 8-16 karakterden oluşmalı ve numara içermelidir.
    </div>

    <div class="row-sm-3 sumbitbutonudiv">
        <button type="submit" class="btn btn-success form-control girisbutonu">Kayıt Ol</button>
    </div>
}
